{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",

    "tasks": [
        {
            "label": "Configure",
            "type":"shell",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "command": "cmake",
            "windows": {
                "args": [
                    "-G",
                    "Visual Studio 16 2019",
                    "-B",
                    "build",
                    "-A",
                    "win32"
                ],
            },
            "osx": {
                "args": [
                    "-G",
                    "Xcode",
                    "-B",
                    "build",
                    "'-DCMAKE_OSX_ARCHITECTURES=arm64;x86_64'"
                ],
            },
            "problemMatcher": []
        },
        {
            "label": "launch Xcode",
            "type": "process",
            "group": "none",
            "presentation": {
                "echo": false,
                "reveal": "never",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            },
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "command": "",
            "osx": {
                "command": "xed",
            },
            "args": [
                "./build/GuiAppExample.xcodeproj",
            ],
            "problemMatcher": []
        },
        {
            "label": "build GuiAppExample",
            "type":"shell",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "command": "cmake",
            "windows": {
                "args": [
                    "--build",
                    ".",
                    "-j",
                    "4",
                    "--config",
                    "Debug",
                    "--target",
                    "GuiAppExample"
                ],
                "problemMatcher": "$msCompile"
            },
            "osx": {
                "args": [
                    "-G",
                    "Xcode",
                    "-B",
                    "build",
                    "'-DCMAKE_OSX_ARCHITECTURES=arm64;x86_64'"
                ],
                "problemMatcher": {
                    "owner": "cpp",
                    "pattern": {
                        "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                        "file": 1,
                        "line": 2,
                        "column": 3,
                        "severity": 4,
                        "message": 5
                    }
                }
            },

            "options": {
                "cwd": "${workspaceRoot}//build"
            },
        }
    ],
    "inputs":[
        {
            "id": "apple-id",
            "description": "Apple ID (email) for notorizing",
            "default": "mike.handford@audient.com",
            "type": "pickString",
            "options": ["mike.handford@audient.com", "steve.flower@audient.com"]
        }
    ]
}